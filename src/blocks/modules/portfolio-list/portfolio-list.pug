include ../../../views/helpers/mixins

mixin portfolio-title(title, subtitle)
  h3.card__title= title
  p.card__text= subtitle

section.portfolio-list.page__section
  +border-section('Portfolio').border-section_image
  .card
    img.card__image(src='./img/page-portfolio/portfolio-minimalist.jpg' alt='Minimalist Room')
    .card__info
      +card-avatar('./img/card-avatar.png', 'Arga Danaan', 'CEO of Dananz').card-avatar_position_right
      +portfolio-title('Minimalist Room', 'Online learning with us does not interfere with your daily life. because learning can be done anytime and anywhere.')
      +link-button('Learn More', './minimalist-room.html').button_primary
  .card
    .card__info
      +card-avatar('./img/card-avatar.png', 'Arga Danaan', 'CEO of Dananz').card-avatar_position_left
      +portfolio-title('Vintage Room', 'Online learning with us does not interfere with your daily life. because learning can be done anytime and anywhere.')
      +link-button('Learn More', './404.html').button_primary
    img.card__image(src='./img/page-portfolio/portfolio-vintage.jpg' alt='Vintage Room')
  .card
    img.card__image(src='./img/page-portfolio/portfolio-modern.jpg' alt='Modern Room')
    .card__info
      +card-avatar('./img/card-avatar.png', 'Arga Danaan', 'CEO of Dananz').card-avatar_position_right
      +portfolio-title('Modern Room', 'Online learning with us does not interfere with your daily life. because learning can be done anytime and anywhere.')
      +link-button('Learn More', './404.html').button_primary
  .card
    .card__info
      +card-avatar('./img/card-avatar.png', 'Arga Danaan', 'CEO of Dananz').card-avatar_position_left
      +portfolio-title('Transitional Room', 'Online learning with us does not interfere with your daily life. because learning can be done anytime and anywhere.')
      +link-button('Learn More', './404.html').button_primary
    img.card__image(src='./img/page-portfolio/portfolio-transitional.jpg' alt='Transitional Room')
