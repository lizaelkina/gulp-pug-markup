mixin link-button(extraClass, title, href='#')
  a.button(class!=extraClass)(href=href)= title

mixin border-section(title, extraClass)
  .border-section(class!=extraClass)
    h2.border-section__text= title
    .border-section__border

mixin card-avatar(src, title, subtitle, extraClass)
  .card-avatar(class!=extraClass)
    img.card-avatar__image(src=src alt=title)
    p.card-avatar__title= title
    span.card-avatar__subtitle= subtitle